@model ngo_webapp.Models.AppealViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Campaign</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mt-3 col-lg-6">
                <lable class="form-label" asp-for="AppealsName">Campaign Name</lable>
				<input type="text" class="form-control" asp-for="AppealsName" required />
                <span asp-validation-for="AppealsName" class="text-danger"></span>
			</div>

			<div class="mt-3 col-lg-6">
                <lable class="form-label" asp-for="Organization">Organization</lable>
				<input type="text" class="form-control" asp-for="Organization" />
			</div>

			<div class="mt-3 col-lg-12">
				<lable class="form-label" asp-for="Description">Description</lable>
				<input type="text" class="form-control" asp-for="Description" />
			</div>

			<div class="mt-3 col-lg-4">
				<lable class="form-label" asp-for="EndDate">End Date</lable>
				<input type="date" class="form-control" asp-for="EndDate" required />
			</div>

			<div class="mt-3 col-lg-4">
				<lable class="form-label" asp-for="Amount">Money's Limit</lable>
				<input type="number" class="form-control" asp-for="Amount" required />
			</div>

			<div class="mt-3 col-lg-4">
				<label asp-for="AppealImageFile">Image</label>
				<input asp-for="AppealImageFile" type="file" class="form-control-file" />
				<span asp-validation-for="AppealImageFile" class="text-danger"></span>
			</div>

			<div class="mt-3 col-lg-12">
				<button type="submit" class="btn btn-outline-success">Create</button>
			</div>
        </form>
    </div>
</div>
<div><a class="btn btn-primary" asp-controller="Appeals" asp-action="List">Return to Event Page</a></div>
